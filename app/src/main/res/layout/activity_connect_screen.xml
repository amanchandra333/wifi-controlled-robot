<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_connect_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.amanchandra.botsocketcontrol.ConnectScreen">

    <EditText
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="IP"
        android:textAlignment="center"
        android:ems="10"
        android:layout_marginEnd="@dimen/_13sdp"
        android:id="@+id/IP"
        android:layout_alignBaseline="@+id/IP_text"
        android:layout_alignBottom="@+id/IP_text"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:ems="10"
        android:id="@+id/Port"
        android:text="Port"
        android:layout_alignBottom="@+id/Port_text"
        android:layout_alignStart="@+id/IP" />

    <TextView
        android:text="IP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:id="@+id/IP_text"
        android:layout_marginStart="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Port_text"
        android:layout_marginTop="@dimen/_95sdp"
        android:layout_below="@+id/IP"
        android:layout_alignEnd="@+id/IP_text" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_btn"
        android:layout_below="@+id/Port"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_83sdp" />
</RelativeLayout>
